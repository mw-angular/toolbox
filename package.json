{
  "name": "@mw-angular/toolbox",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "------------------ app: website ------------------": "",
    "start:website": "ng serve website --port 4200",
    "start-for-devices:website": "npm run start:website -- --host 0.0.0.0",
    "build:website": "npm run build-all-libs && npm run tailwindcss:website && ng build website --configuration production --stats-json",
    "tailwindcss:website": "ng run website:tailwindcss",
    "lint:website": "ng lint website --fix",
    "lint-ci:website": "ng lint website",
    "lint-scss:website": "stylelint --max-warnings 0 --allow-empty-input --formatter verbose --fix \"apps/website/**/*.scss\"",
    "lint-scss-ci:website": "stylelint --max-warnings 0 --allow-empty-input \"apps/website/**/*.scss\"",
    "test:website": "ng test website --code-coverage --no-watch",
    "test-ci:website": "ng test website --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "e2e:website": "ng e2e website --port 6200",
    "e2e-ci:website": "ng e2e website --port 6200 --protractor-config=apps/website/e2e/protractor-ci.conf.js",
    "analyze:website": "webpack-bundle-analyzer dist/website/stats.json",
    "------------------ app: styleguide ------------------": "",
    "start:styleguide": "ng serve styleguide --port 4300",
    "start-for-devices:styleguide": "npm run start:styleguide -- --host 0.0.0.0",
    "build:styleguide": "npm run build-all-libs && npm run tailwindcss:styleguide && ng build styleguide --configuration production --stats-json",
    "tailwindcss:styleguide": "ng run styleguide:tailwindcss",
    "lint:styleguide": "ng lint styleguide --fix",
    "lint-ci:styleguide": "ng lint styleguide",
    "lint-scss:styleguide": "stylelint --max-warnings 0 --allow-empty-input --formatter verbose --fix \"apps/styleguide/**/*.scss\"",
    "lint-scss-ci:styleguide": "stylelint --max-warnings 0 --allow-empty-input \"apps/styleguide/**/*.scss\"",
    "test:styleguide": "ng test styleguide --code-coverage --no-watch",
    "test-ci:styleguide": "ng test styleguide --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "e2e:styleguide": "ng e2e styleguide --port 6200",
    "e2e-ci:styleguide": "ng e2e styleguide --port 6200 --protractor-config=apps/styleguide/e2e/protractor-ci.conf.js",
    "analyze:styleguide": "webpack-bundle-analyzer dist/styleguide/stats.json",
    "------------------ lib: design-system ------------------": "",
    "start:design-system": "ng build design-system --configuration production --watch",
    "build:design-system": "ng build design-system --configuration production",
    "lint:design-system": "ng lint design-system --fix",
    "lint-ci:design-system": "ng lint design-system",
    "lint-scss:design-system": "stylelint --max-warnings 0 --allow-empty-input --formatter verbose --fix \"libs/design-system/**/*.scss\"",
    "lint-scss-ci:design-system": "stylelint --max-warnings 0 --allow-empty-input \"libs/design-system/**/*.scss\"",
    "test:design-system": "ng test design-system --code-coverage --no-watch",
    "test-ci:design-system": "ng test design-system --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "------------------ lib: core ------------------": "",
    "start:core": "ng build @mw-angular/core --configuration production --watch",
    "build:core": "ng build @mw-angular/core --configuration production",
    "lint:core": "ng lint @mw-angular/core --fix",
    "lint-ci:core": "ng lint @mw-angular/core",
    "lint-scss:core": "stylelint --max-warnings 0 --allow-empty-input --formatter verbose --fix \"libs/mw-angular/core/**/*.scss\"",
    "lint-scss-ci:core": "stylelint --max-warnings 0 --allow-empty-input \"libs/mw-angular/core/**/*.scss\"",
    "test:core": "ng test @mw-angular/core --code-coverage --no-watch",
    "test-ci:core": "ng test @mw-angular/core --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "publish-major:core": "./tools/publish-lib.sh core major",
    "publish-minor:core": "./tools/publish-lib.sh core minor",
    "publish-patch:core": "./tools/publish-lib.sh core patch",
    "------------------ lib: tailwindcss-builder ---------": "",
    "start:tailwindcss-builder": "npm run build:tailwindcss-builder && tsc -p libs/mw-angular/tailwindcss-builder/tsconfig.lib.json --watch",
    "build:tailwindcss-builder": "libs/mw-angular/tailwindcss-builder/tools/build.sh",
    "publish-major:tailwindcss-builder": "./tools/publish-lib.sh tailwindcss-builder major",
    "publish-minor:tailwindcss-builder": "./tools/publish-lib.sh tailwindcss-builder minor",
    "publish-patch:tailwindcss-builder": "./tools/publish-lib.sh tailwindcss-builder patch",
    "------------------ common ------------------": "",
    "build-all-libs": "./tools/build-all-libs.sh",
    "prettier": "prettier --write \"{apps,libs}/**/*.{ts,scss,html}\"",
    "prettier-ci": "prettier --check \"{apps,libs}/**/*.{ts,scss,html}\"",
    "lint-scss": "stylelint --max-warnings 0 --allow-empty-input --formatter verbose --fix \"{apps,libs}/**/*.scss\"",
    "lint-scss-ci": "stylelint --max-warnings 0 --allow-empty-input \"{apps,libs}/**/*.scss\"",
    "pre-commit": "./tools/hooks/pre-commit.sh",
    "pre-push": "./tools/hooks/pre-push.sh"
  },
  "lint-staged": {
    "{apps,libs}/**/*.{ts,scss,html}": [
      "prettier --write"
    ],
    "{apps,libs}/**/*.scss": [
      "stylelint --max-warnings 0 --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit",
      "commit-msg": "node ./tools/hooks/commit-msg.js",
      "pre-push": "npm run pre-push"
    }
  },
  "dependencies": {
    "@angular-devkit/build-angular": "~0.1100.5",
    "@angular/animations": "~11.0.5",
    "@angular/cli": "~11.0.5",
    "@angular/common": "~11.0.5",
    "@angular/compiler": "~11.0.5",
    "@angular/compiler-cli": "~11.0.5",
    "@angular/core": "~11.0.5",
    "@angular/forms": "~11.0.5",
    "@angular/platform-browser": "~11.0.5",
    "@angular/platform-browser-dynamic": "~11.0.5",
    "@angular/router": "~11.0.5",
    "@types/jasmine": "~3.6.0",
    "@types/lodash-es": "^4.17.4",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lodash-es": "^4.17.21",
    "ng-packagr": "^11.0.0",
    "protractor": "~7.0.0",
    "rxjs": "~6.6.0",
    "ts-node": "~8.3.0",
    "tslib": "^2.0.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular/cdk": "^11.0.3",
    "@tailwindcss/forms": "^0.2.1",
    "autoprefixer": "^10.2.1",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "postcss": "^8.2.4",
    "postcss-import": "^14.0.0",
    "prettier": "2.2.1",
    "stylelint": "^13.8.0",
    "stylelint-config-hudochenkov": "^5.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "tailwindcss": "^2.0.2",
    "webpack-bundle-analyzer": "^4.3.0"
  }
}
